# [NOT_RELOADABLE]
# How many silver coins the contract requires
# A non-negative integer.
# Default: 10
cmContractPrice=10

# [NOT_RELOADABLE]
# How difficult crafting the contract should be. Vanilla is 100.0F
# A non-negative number.
# Default: 20.0
cmContractDifficulty=20.0f

