######## Animal Names #######
enableAnimalNames=true

# Customize the names animals can be born with.
# In this module MaleNames and FemaleNames refer to the names horses can get, while MaleUnicornNames, and
# FemaleUnicornNames refer to what unicorns can get. I'll call these the specific names. GenericNames affect
# both horses and unicorns.

# TIP: To test birth names you have to be a GM Power 5+ player, and be sure to lead the MALE animal.
#      Then with bdew's action mod bind the breed action to a key (or just do it normally), and then if
#      you spam it, the female will eventually give birth to a newborn. Hopefully with your custom names.


# In vanilla the way a name is generated is:
#    50% chance: generic name + generic name (no space between them)
#    0.5% chance: specific name
#    25% chance: generic name + specific name (no space between them)
#    24.5% chance: specific name + generic name (no space between them)
# This option makes it use only one name.
# So if you have two specific female names "lilah" and "leeluh" by default wurm might give a horse the name
# "Lilahleeluh". With this option it will always be named "Lilah" or "Leeluh".
# Meaning that now the name will be generated as:
#    50% chance: generic name
#    50% chance: specific name
anUseOnlyOneName=false

# [NOT_RELOADABLE]
# To enable generating names for every born creature, not just horses. All the specific names for horses
# will apply to all creatures, except for unicorns.
# Default: false
anAllCreaturesCustomNames=true

# [NOT_RELOADABLE]
# Whether to clear the vanilla names for each category. You can add back the ones you like later.
# Even set to true it does not apply if you don't supply any custom names respectively.
# Default: false
anClearMaleNames=false
anClearFemaleNames=false
anClearGenericNames=false
anClearMaleUnicornNames=false
anClearFemaleUnicornNames=false

# [NOT_RELOADABLE]
# The custom names you want to add to each category. Separate with commas.
# Names should not be all lower caps. They will be capitalized as needed.
# Remove the # before each category to activate it.
# Note: It is best to stick to letters a-z. You can try other characters,
#       but they might not be stored/displayed correctly.
# Default: nothing
# Example: anCustomMaleNames= cheese, blorb, schmetterling
#anCustomMaleNames= yourcustomname, yourothercustomname
#anCustomFemaleNames= yourcustomname, yourothercustomname
#anCustomGenericNames= yourcustomname, yourothercustomname
#anCustomMaleUnicornNames= yourcustomname, yourothercustomname
#anCustomFemaleUnicornNames= yourcustomname, yourothercustomname

######## Craftable Merchant #######

